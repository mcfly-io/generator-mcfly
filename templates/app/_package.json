{
    "name": "<%= _.slugify(appname) %>",
    "version": "0.0.1",
    "scripts": {
        "prepublish": "bash ./bin/prepublish.sh",
        "test": "gulp test"
    },
    "dependencies": {<% if (famous) { %>
        "famous-polyfills": "^0.3.0"<% } %>
    },
    "devDependencies": {
        "brfs": "^1.2.0",
        "browserify": "^5.13.1",
        "browserify-istanbul": "^0.1.2",
        "browserify-shim": "^3.8.0",
        "chalk": "^0.5.1",
        "conventional-changelog": "0.0.11",
        "coveralls": "^2.11.1",
        "cssify": "^0.6.0",
        "deamdify": "^0.1.1",
        "growly": "*",
        "gulp": "^3.8.8",
        "gulp-jscs": "*",
        "gulp-jshint": "*",
        "gulp-load-plugins": "*",
        "gulp-rename": "~1.2.0",
        "gulp-util": "^3.0.1",
        "gulp-webserver": "*",
        "html2js-browserify": "0.0.2",
        "jasmine-reporters": "^1.0.1",
        "jasmine-spec-reporter": "^0.6.0",
        "jshint-stylish": "*",
        "karma": "^0.12.23",
        "karma-bro": "^0.7.0",
        "karma-coverage": "^0.2.6",
        "karma-growl-reporter": "*",
        "karma-jasmine": "^0.2.2",
        "karma-mocha-reporter": "^0.3.1",
        "karma-phantomjs-launcher": "^0.1.4",
        "open": "*",
        "protractor-html-screenshot-reporter": "^0.0.17",
        "require-dir": "*",
        "stream-combiner": "*",
        "vinyl-source-stream": "^1.0.0",
        "watchify": "^1.0.2"
    },
    "engines": {
        "node": ">=0.10.0"
    },
    "browser": {
        "angular": "./bower_components/angular/angular.min.js",
        "angular-mocks": "./bower_components/angular-mocks/angular-mocks.js",
        "angular-ui-router": "./bower_components/angular-ui-router/release/angular-ui-router.min.js",
        "angular-animate": "./bower_components/angular-animate/angular-animate.min.js",
        "angular-sanitize": "./bower_components/angular-sanitize/angular-sanitize.min.js"<% if(ionic) { %>,
        "ionic": "./bower_components/ionic/release/js/ionic.min.js",
        "angular-ionic": "./bower_components/ionic/release/js/ionic-angular.min.js"<% } %><% if(famous) { %>,
        "famous": "./bower_components/famous/dist/famous-global.min.js",
        "famous-angular": "./bower_components/famous-angular/dist/famous-angular.min.js"<% } %><% if(ngCordova) { %>,
        "ngCordova": "./bower_components/ngCordova/dist/ng-cordova.min.js",
        "ngCordova": "./bower_components/ngCordova/dist/ng-cordova-mocks.min.js"<% } %>
    },
    "browserify": {
        "transform": [
            "html2js-browserify",
            "cssify",
            "browserify-shim",
            "deamdify",
            "brfs"
        ]
    },
    "browserify-shim": {
        "angular": {
            "exports": "angular"
        },
        "angular-mocks": {
            "exports": "angular",
            "depends": [
                "angular"
            ]
        },
        "angular-ui-router": {
            "depends": [
                "angular"
            ]
        }<% if(ionic) { %>,
        "angular-ionic": {
          "exports": "ionic",
          "depends": [
            "ionic",
            "angular",
            "angular-animate",
            "angular-sanitize",
            "angular-ui-router"
          ]
        }<% } %><% if(famous) { %>,
        "famous": {
            "exports": "famous"
        },
        "famous-angular": {
            "depends": [
              "famous-polyfills",
              "famous",
              "angular",
              "angular-animate",
              "angular-sanitize",
              "angular-ui-router"
          ]
        }<% } %><% if(ngCordova) { %>,
        "ngCordova": {
            "exports": "ngCordova",
            "depends": [
                "angular"
            ]
        },
        "ngCordovaMocks": {
            "exports": "ngCordovaMocks",
            "depends": [
                "angular"
            ]
        }<% } %>
    }
}